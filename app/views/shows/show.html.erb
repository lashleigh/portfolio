<script type="text/javascript">
  var slideshow;
  var code_editor;
  var show_editor;
  $(function() {
    code_editor = CodeMirror(document.body, {
      mode:  "javascript",
      matchBrackets: true
    })

    slideshow = create_slideshow(<%= @show.to_json(:include => :slides).html_safe %>);
    rescale();
    $(window).resize( function() {
      rescale();
    })
    function rescale() {
      var scale = Math.max(slideshow.width/window.innerWidth, slideshow.height/window.innerHeight);
      $("#scale_slides").attr("max", 100*Math.min(scale, (1/scale)));
      $("#scale_slides").attr("min", 100*Math.min(scale*0.2, scale));
    }
  })
</script>

<%= render :partial => 'slides/slide', :collection => @show.slides %>

<%= form_for(@show, :remote => true) do |f|%>
  <%= f.hidden_field :scripts %>
  <%= f.hidden_field :styles %>
  <%= f.submit %>
<% end %>
